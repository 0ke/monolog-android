<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auth"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    tools:context="com.huijimuhe.monolog.ui.auth.SignInActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button

            android:id="@+id/btn_weixin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/background_auth_button"
            android:text="微信登录"
            android:textColor="#fff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_user_agreement"
            style="@style/Text.Sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="@dimen/box_margin"
            android:paddingTop="@dimen/box_margin"
            android:textColor="#e8e8e8"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
