<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                style="@style/Text.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_from_near" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/box_margin"
                android:layout_marginTop="@dimen/box_margin"
                android:layout_weight="4"
                android:background="@drawable/statue_box"
                android:minHeight="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/box_margin"
                    android:layout_weight="3"
                    android:background="@drawable/statue_img"
                    android:scaleType="centerCrop" />

                <TextView

                    android:id="@+id/tv_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/box_margin"
                    android:layout_weight="1"
                    android:lines="3"
                    android:text="来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近来自附近" />
            </LinearLayout>

            <TextView
                style="@style/Text.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_guess_who" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </RelativeLayout>

            <TextView
                style="@style/Text.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/box_margin"
                android:text="@string/string_refresh_get_new_monolog" />
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>

